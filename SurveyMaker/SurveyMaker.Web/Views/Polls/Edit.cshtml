@model PollFormServiceModel

@{
    ViewData["Title"] = $"Edit { Model.Name } Poll";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="10" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <a asp-area="" asp-controller="Questions" asp-action="Create" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-default">Add Question</a>

            <button type="submit" class="btn btn-primary">Edit Poll</button>
        </form>
    </div>
</div>

