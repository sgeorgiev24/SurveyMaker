@model UserListingsViewModel

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                First name
            </th>
            <th>
                Role
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.Username
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @if (user.Role.Any(r => r == SurveyMaker.Web.WebConstants.AdministratorRole))
                    {
                        <a asp-area="Admin" asp-controller="Users" asp-action="RemoveFromRole" asp-route-id="@user.Id" class="btn btn-danger">Remove Administrator role.</a>
                    }
                    else
                    {
                        <a asp-area="Admin" asp-controller="Users" asp-action="AddToRole" asp-route-id="@user.Id" class="btn btn-success">Make Administrator.</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>